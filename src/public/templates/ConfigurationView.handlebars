<!-- Modal -->
<div id="myModal2" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title"> AWS Account Settings <i class="fa fa-question-circle" id ="AccountSettings" data-toggle="tooltip" title="General Info regarding account settings"></i></h4>
				<p>For best accuracy, please input credits and credits used information information soon after Amazon updates the invoice for your account. This is usually at the end of the first week of the month. Info found at <a href="https://console.aws.amazon.com/billing/home#/credits">AWS Console</a><p> 
				<p>Only Credit Expiration, Credits, and Credits Used can be modified here. Go to /AWSDelegator/src/server/config.js to modify other settings</p>
			</div>
			<div class="modal-body">
				{{#each pages}}
				<div class="insetting"> 
					<div class="incontainer">
						<label class="config-label">Account Number <i class="fa fa-question-circle" id ="AccountNumTooltip" data-toggle="tooltip" title="This is your account number set in config"></i></label>
						<div type="text" class="account" value="012345678910"></div>
						{{this.number}}
					</div>
				</div>
				<div class="insetting"> 
					<div class="incontainer">
						<label class="config-label">S3 Bucket Region <i class="fa fa-question-circle" id ="S3BucketRegion" data-toggle="tooltip" title="The region where your S3 bucket is located"></i></label>
						<div type="text" class="account" value="">{{this.s3}}</div>
					</div>
				</div>
				<div class="insetting"> 
					<div class="incontainer">
						<label class="config-label">S3 Bucket Name <i class="fa fa-question-circle" id ="S3BucketName" data-toggle="tooltip" title="The name of the S3 bucket where invoices are saved"></i></label>
						<div type="text" class="account" value="">{{this.bucketName}}</div>
					</div>
				</div>
				<div class="insetting"> 
					<div class="incontainer">
						<label class="config-label">DB URL <i class="fa fa-question-circle" id ="DBURL" data-toggle="tooltip" title="Location of your database"></i></label>
						<div type="text" class="account" value="" disabled>{{this.URL}}</div>
					</div>
				</div>



				<div class="insetting"> 
					<div class="incontainer">
						<label class="budget-label">Expiration Date <i class="fa fa-question-circle" id ="Expiration" data-toggle="tooltip" title="Expiration date of AWS credits. Value can be found by following the link at the top"></i></label>
						<input type="text" id="expDate" placeholder="mm/dd/yyyy" id='expDate'/>
						<div class="warning" id="CreditExpWarning">Invalid dates selected.</div>
						<div class="warning" id="CreditExpRequest">Please select an expiration date.</div>
					</div>
				</div>

				<div class="insetting"> 
					<div class="incontainer">
						<label class="budget-label">Credits Remaining <i class="fa fa-question-circle" id ="Credits" data-toggle="tooltip" title="Number of credits remaining as reported by amazon"></i></label>
						<input type="text" id="CreditsField" placeholder="200">
						<div class="warning" id="CreditsWarning">Invalid decay rate.</div>
						<div class="warning" id="CreditsRequest">Please enter a decay rate.</div>
					</div>
				</div>

				<div class="insetting"> 
					<div class="incontainer">
						<label class="budget-label">Credits Used <i class="fa fa-question-circle" id ="CreditsUsed" data-toggle="tooltip" title="Number of credits used as reported by amazon"></i></label>
						<input type="text" id="CreditsUsedField" placeholder="100">
						<div class="warning" id="creditsUsedWarning">Invalid decay rate.</div>
						<div class="warning" id="creditsUsedRequest">Please enter a decay rate.</div>
					</div>
				</div>

				{{/each}}
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal" id="saveConfig">Save</button>
				<button type="button" class="btn btn-default" data-dismiss="modal" id="closebtn">Close</button>
			</div>
		</div>
	</div>
</div>
